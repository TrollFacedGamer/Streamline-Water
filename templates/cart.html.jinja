<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Streamline Water</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  
    <style>
    
    </style>
  
  </head>
  <body>
        {%  include  "components/navbar.html.jinja"%}
        {# <!--{% %} repersents a line of python--> #}
        <h1>Cart</h1>
        <div class="table-responsive">
          {% if cart_products|length > 0 %}
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Product</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                  <th scope="col"></th>
                </tr>
              </thead>
                <tbody>
                  {% for item in cart_products %}
                    <tr>
                      <td><img src="{{ item['image'] }}" height="80" alt="Image of {{ item['name'] }}"></td>
                      <td>{{ item["name"] }}</td>
                      <td>${{ item["price"] }}</td>
                      <td>{{ item["quantity"] }}</td>
                      <td>${{ item["price"] * item["quantity"] }}</td>
                      <td>
                        <form action="/cart/remove_cart" method="post">
                          <button id="buy_btn" class="btn btn-danger" type="submit" name="id" value="{{item['id']}}">Remove</button>
                        </form>
                      </td>
                    </tr>
                  {% endfor %}
                    <tr>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td>Total: $ {{ total_price }}</td>
                    </tr>
                </tbody>
            </table>
          {% else %}
            <p>You have no items in cart</p>
          {% endif %}
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>