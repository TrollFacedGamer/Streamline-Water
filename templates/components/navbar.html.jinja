{# <!-- use the name assigned by @app.route("/browse") --> #}
<nav class="navbar navbar-expand-lg navbar-light bg-light" id="navbar">
  <div class="container-fluid">
    <a class="navbar-brand btn btn-light active" href="/">Streamline Water</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active btn btn-light active" aria-current="page" href="/browse">Browse</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn btn-light active" href="/cart">Cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn btn-light active" href="/past_orders">Past Orders</a>
        </li>
      </ul>
      <form class="d-flex" role="search" action="/browse">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query">
        <button class="btn btn-outline-light" type="submit">Search</button>
      </form>
      <div class="ps-lg-5">
        {% if current_user.is_authenticated %}
          <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
              {{ current_user.username }}
            </button>
            <ul class="dropdown-menu dropdown-menu-lg-end">
              <li><a class="dropdown-item" href="/logout">Sign Out</a></li>
            </ul>
          </div>
        {% else %}
          <div class="btn-group">
            <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
              Account
            </button>
            <ul class="dropdown-menu dropdown-menu-lg-end">
              <li><a class="dropdown-item" href="/sign_in">Sign In</a></li>
              <li><a class="dropdown-item" href="/sign_up">Sign Up</a></li>
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</nav>